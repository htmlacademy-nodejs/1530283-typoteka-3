extends ../layout.pug

block content
  main.main-page.main-page--padding
    section.main-page__notes.notes
      h1.notes__title Мои записи
      ul.notes__list
        each article in articles
          li.notes__list-item
            time.notes__item-time(datetime=article.createdCEODate)= article.createdDate
            a.notes__item-text(href=`/articles/edit/${article.id}`)= article.title
            button.notes__button.button.button--close-item(type='button' style=`background-position:calc(50% + 1px) 50%`)
              span.visually-hidden Закрыть строку списка
