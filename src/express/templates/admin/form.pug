extends ../layout.pug

block content
  main
    section
      .popup.popup--new-publication.popup--anti
        .new-publication
          form(action='#' method='POST' enctype='multipart/form-data')
            .new-publication__header
              h1= isNew ? `Новая публикация` : `Редактирование публикации`
              .new-publication__date-form
                h3 Дата публикации
                .new-publication__date-form-division
                  .new-publication__date-block
                    label(for='new-publication-date' aria-label='Календарь')
                    input#new-publication-date(type='text' name='date' placeholder=article.createdAt value=article.createdAt style='width:90px')
              button.new-publication__button.button.button--colored(type='submit')= isNew ? `Опубликовать` : `Сохранить`
            a.popup__button.button.button--popup-close(href="/my" aria-label='Закрыть окно') Закрыть окно
            .new-publication__form.form
              .form__wrapper.form__wrapper--intro
                .form__field
                  label
                    input(type='text' name='title' placeholder='Заголовок' value=article.title required)
                .form__field.form__field--post-image
                  label
                    input#image-name-field(type='text' name='filename' placeholder='Фотография' readonly value=article.picture)
                  .form__image-loader.form__image-loader--publication
                    label
                      input.visually-hidden(type='file' name='upload')
                      | Обзор
                    button.button.button--transparent(type="button" data-delete) Удалить
                .new-publication__category-wrapper
                  each category in categories
                    .new-publication__checkbox
                      - const checkboxId = `category-${category.id}-checkbox`
                      - const isChecked = Boolean(article.categories.find(({id}) => id === category.id))
                      input(id=checkboxId type='checkbox' name='categories' value=category.id checked=isChecked)
                      label(for=checkboxId)= category.name
                  a.new-publication__form-link.button.button--transparent(href='/my/categories') Добавить категорию
              .form__wrapper.form__wrapper--text
                .form__field.form__field--publication-text
                  label
                    textarea(rows='5' name='announce' placeholder='Анонс публикации' required)
                      = article.announce
                .form__field.form__field--publication-text
                  label
                    textarea(rows='10' name='full-text' placeholder='Полный текст публикации')
                      = article.fullText

block scripts
  script(type='text/javascript').
    flatpickr('#new-publication-date', {
      defaultDate: `#{article.createdAt}`,
      dateFormat: `d-m-Y`,
    })

    const clearFileButton = document.querySelector(`.button[data-delete]`);
    const fileInput = document.querySelector(`input[name="upload"]`);
    const fileNameInput = document.querySelector(`input[name="filename"]`);

    clearFileButton.addEventListener(`click`, () => {
      fileInput.value = ``;
      fileNameInput.value = ``;
    });

