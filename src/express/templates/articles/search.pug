extends ../layout.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='#' method='get')
            label
              input(type='text' name='query' placeholder='Что ищем?' value=query)
            button.search__button.button.button--transparent(type='submit') Найти
          if articles
            if articles.length
              each article in articles
                .search__result
                  time.search__date(datetime=article.createdCEODate)= article.createdDate
                  a.search__link(href=`/articles/${article.id}`)= article.title
            else
              .search__result Ничего не найдено
