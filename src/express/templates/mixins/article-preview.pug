mixin previewArticle(article)
  li.preview__item(class={[`preview__item--noimage`]: !article.picture})
    ul.preview__breadcrumbs(style=`flex-wrap:wrap`)
      each category in article.categories
        li.preview__breadcrumbs-item
          a.preview__breadcrumbs-link(href=`/articles/category/${category.id}`)= category.name
    if article.picture
      .preview__background
        img.preview__background-image(src=`/img/${article.picture}` width='460' height='240' alt='' style="height:100%")
    time.preview__time(datetime=article.createdCEODate)= article.createdDate
    h3.preview__name
      a.preview__name-link(href=`/articles/${article.id}`)= article.title
    p.preview__text= article.announce
    a.preview__comment(href=`/articles/${article.id}#comments`)
      | Комментарии
      span.preview__cloud
      |
      b.preview__comment-count  #{article.commentsCount}
