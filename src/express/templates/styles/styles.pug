style.
  .button--close-item {
    background-position: calc(50% + 1px) 50%;
  }

  .new-publication__date-block input {
    width: 90px;
  }

  .post__picture {
    height: 490px;
  }

  .post__picture img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .preview__breadcrumbs {
    flex-wrap: wrap;
  }

  .preview__background-image {
    height: 100%;
  }

  .category__add-form {
    position: relative;
  }

  .category__error {
    position: absolute;

    bottom: -20px;
    left: 40px;
    right: 0;

    color: red;
  }

  .category__error--add-form {
    bottom: -15px;
  }
